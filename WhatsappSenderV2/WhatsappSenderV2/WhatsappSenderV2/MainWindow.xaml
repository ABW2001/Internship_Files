<Window x:Class="WhatsappSenderV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhatsappSenderV2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="57,44,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Margin="57,85,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnPost" Content="Post" HorizontalAlignment="Left" Margin="213,44,0,0" VerticalAlignment="Top" Width="50" Click="btnPost_Click"/>
        <Button x:Name="btnGet" Content="Get" HorizontalAlignment="Left" Margin="213,83,0,0" VerticalAlignment="Top" Width="50" Click="btnGet_Click"/>

    </Grid>
</Window>
